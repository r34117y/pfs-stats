{% extends 'static/player/_base_profile.html.twig' %}

{% set activeMenuItem = 'tournaments' %}

{% block player_profile_content %}
    <div x-data="playerTournamentsData({{ playerId }})" x-init="fetchTournaments()">
        <h1 class="title is-3">Turnieje zawodnika</h1>

        <template x-if="loading">
            <p>Ładowanie...</p>
        </template>

        <template x-if="error">
            <article class="message is-danger">
                <div class="message-body" x-text="error"></div>
            </article>
        </template>

        <div x-show="!loading && !error">
            <div class="control mb-5">
                <input class="input" type="search" placeholder="Filtruj po nazwie turnieju" @input="setSearch($event.target.value)">
            </div>
            {% include 'static/_partials/_pagination.html.twig' %}
            <div style="overflow-x: auto;">
                <table class="table is-bordered is-hoverable is-fullwidth">
                    <thead>
                    <tr>
                        <th @click="sort('date')">Data</th>
                        <th @click="sort('name')">Turniej</th>
                        <th @click="sort('tournamentRank')">Rank turnieju</th>
                        <th @click="sort('numberOfPlayers')">Liczba graczy</th>
                        <th @click="sort('finalPosition')">Pozycja końcowa</th>
                        <th @click="sort('gamesWon')">Wygrane</th>
                        <th @click="sort('gamesDraw')">Remisy</th>
                        <th @click="sort('gamesLost')">Przegrane</th>
                        <th @click="sort('averagePoints')">Śr. punktów</th>
                        <th @click="sort('averagePointsLost')">Śr. pkt straconych</th>
                        <th @click="sort('averagePointsSum')">Śr. suma pkt</th>
                        <th @click="sort('achievedRank')">Uzyskany rank</th>
                        <th @click="sort('positionAsPercent')">Pozycja %</th>
                    </tr>
                    </thead>
                    <tbody>
                    <template x-for="tournament in pagedTournaments" :key="tournament.id">
                        <tr>
                            <td class="text-center" x-text="tournament.date"></td>
                            <td x-text="tournament.name"></td>
                            <td class="text-center" x-text="formatFloat(tournament.tournamentRank)"></td>
                            <td class="text-center" x-text="tournament.numberOfPlayers"></td>
                            <td class="text-center" x-text="tournament.finalPosition"></td>
                            <td class="text-center" x-text="tournament.gamesWon"></td>
                            <td class="text-center" x-text="tournament.gamesDraw"></td>
                            <td class="text-center" x-text="tournament.gamesLost"></td>
                            <td class="text-center" x-text="formatFloat(tournament.averagePoints)"></td>
                            <td class="text-center" x-text="formatFloat(tournament.averagePointsLost)"></td>
                            <td class="text-center" x-text="formatFloat(tournament.averagePointsSum)"></td>
                            <td class="text-center" x-text="formatFloat(tournament.achievedRank)"></td>
                            <td class="text-center" x-text="formatPercent(tournament.positionAsPercent)"></td>
                        </tr>
                    </template>
                    </tbody>
                </table>
            </div>
            {% include 'static/_partials/_pagination.html.twig' %}
        </div>
    </div>
{% endblock %}

{% block player_profile_scripts %}
    <script>
        function playerTournamentsData(playerId) {
            return {
                playerId,
                loading: true,
                error: '',
                search: '',
                sortCol: 'date',
                sortAsc: false,
                pageSize: 50,
                curPage: 1,
                tournaments: [],
                async fetchTournaments() {
                    try {
                        let response = await fetch(`/api/players/${this.playerId}/tournaments`);
                        if (!response.ok) {
                            throw new Error('Nie udało się pobrać turniejów zawodnika');
                        }
                        let data = await response.json();
                        this.tournaments = data.tournaments;
                    } catch (error) {
                        console.error('Błąd:', error);
                        this.error = error.message;
                    } finally {
                        this.loading = false;
                    }
                },
                sort(col) {
                    if (this.sortCol === col) this.sortAsc = !this.sortAsc;
                    this.sortCol = col;
                    this.tournaments.sort((a, b) => {
                        if (a[this.sortCol] < b[this.sortCol]) return this.sortAsc ? 1 : -1;
                        if (a[this.sortCol] > b[this.sortCol]) return this.sortAsc ? -1 : 1;
                        return 0;
                    });
                },
                nextPage() {
                    if ((this.curPage * this.pageSize) < this.filteredTournaments.length) {
                        this.curPage++;
                    }
                },
                previousPage() {
                    if (this.curPage > 1) {
                        this.curPage--;
                    }
                },
                setSearch(search) {
                    this.curPage = 1;
                    this.search = search;
                },
                formatFloat(value) {
                    return Number(value).toFixed(2);
                },
                formatPercent(value) {
                    if (value === null || value === undefined) {
                        return '-';
                    }

                    return `${Number(value).toFixed(2)}%`;
                },
                get filteredTournaments() {
                    if (this.search === '') {
                        return this.tournaments;
                    }

                    return this.tournaments.filter((tournament) => {
                        return tournament.name.toLowerCase().includes(this.search.toLowerCase());
                    });
                },
                get pagedTournaments() {
                    const start = (this.curPage - 1) * this.pageSize;
                    const end = this.curPage * this.pageSize;
                    return this.filteredTournaments.filter((row, index) => index >= start && index < end);
                }
            };
        }
    </script>
{% endblock %}

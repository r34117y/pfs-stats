{% extends 'static/player/_base_profile.html.twig' %}

{% set activeMenuItem = 'head_to_head' %}

{% block player_profile_content %}
    <div x-data="playerGameBalanceData({{ playerId }})" x-init="fetchRows()">
        <h1 class="title is-3">Bilans pojedynków</h1>

        <template x-if="loading">
            <p>Ładowanie...</p>
        </template>

        <template x-if="error">
            <article class="message is-danger">
                <div class="message-body" x-text="error"></div>
            </article>
        </template>

        <div x-show="!loading && !error">
            <div class="control mb-5">
                <input class="input" type="search" placeholder="Filtruj po przeciwniku" @input="setSearch($event.target.value)">
            </div>
            {% include 'static/_partials/_pagination.html.twig' %}
            <div style="overflow-x: auto;">
                <table class="table is-bordered is-hoverable is-fullwidth">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Przeciwnik</th>
                        <th>% wygranych</th>
                        <th>Bilans (W-P)</th>
                        <th>Bilans małych punktów</th>
                        <th>Wygrane</th>
                        <th>Remisy</th>
                        <th>Porażki</th>
                        <th>Seria</th>
                        <th>Śr. punktów</th>
                        <th>Śr. punktów przeciwnika</th>
                    </tr>
                    </thead>
                    <tbody>
                    <template x-for="row in pagedRows" :key="row.opponentId">
                        <tr>
                            <td class="text-center" x-text="row.position"></td>
                            <td><a :href="`/players/${row.opponentId}`" x-text="row.opponent"></a></td>
                            <td class="text-center" x-text="formatPercent(row.winPercent)"></td>
                            <td class="text-center" x-text="row.gameBalance"></td>
                            <td class="text-center" x-text="row.smallPointsBalance"></td>
                            <td class="text-center" x-text="row.wins"></td>
                            <td class="text-center" x-text="row.draws"></td>
                            <td class="text-center" x-text="row.losses"></td>
                            <td class="text-center" x-text="row.streak"></td>
                            <td class="text-center" x-text="formatFloat(row.averagePoints)"></td>
                            <td class="text-center" x-text="formatFloat(row.averageOpponentPoints)"></td>
                        </tr>
                    </template>
                    </tbody>
                </table>
            </div>
            {% include 'static/_partials/_pagination.html.twig' %}
        </div>
    </div>
{% endblock %}

{% block player_profile_scripts %}
    <script>
        function playerGameBalanceData(playerId) {
            return {
                loading: true,
                error: '',
                search: '',
                pageSize: 50,
                curPage: 1,
                rows: [],
                async fetchRows() {
                    try {
                        let response = await fetch(`/api/players/${playerId}/game-balance`);
                        if (!response.ok) {
                            throw new Error('Nie udało się pobrać bilansu gier');
                        }

                        let data = await response.json();
                        this.rows = data.rows;
                    } catch (error) {
                        console.error('Błąd:', error);
                        this.error = error.message;
                    } finally {
                        this.loading = false;
                    }
                },
                setSearch(search) {
                    this.curPage = 1;
                    this.search = search;
                },
                nextPage() {
                    if ((this.curPage * this.pageSize) < this.filteredRows.length) {
                        this.curPage++;
                    }
                },
                previousPage() {
                    if (this.curPage > 1) {
                        this.curPage--;
                    }
                },
                formatFloat(value) {
                    return Number(value).toFixed(2);
                },
                formatPercent(value) {
                    return `${Number(value).toFixed(2)}%`;
                },
                get filteredRows() {
                    if (this.search === '') {
                        return this.rows;
                    }

                    return this.rows.filter((row) => row.opponent.toLowerCase().includes(this.search.toLowerCase()));
                },
                get pagedRows() {
                    const start = (this.curPage - 1) * this.pageSize;
                    const end = this.curPage * this.pageSize;
                    return this.filteredRows.filter((row, index) => index >= start && index < end);
                }
            };
        }
    </script>
{% endblock %}
